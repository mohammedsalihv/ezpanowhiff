  <script>
    async function applyCoupon() {
        const enteredCouponCode = document.getElementById('enteredCouponCode').value;
        const apiUrl = `/applyCoupon/${enteredCouponCode}`;

        try {
            const response = await fetch(apiUrl, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (!response.ok) {
                const errorData = await response.json();
                throw new Error(errorData.message || `Network response was not ok (${response.status} ${response.statusText})`);
            }

            const data = await response.json();
            console.log(data);

            if (data.success) {
                await Swal.fire({
                    icon: 'success',
                    title: 'Coupon Applied Successfully',
                    text: `Congratulations! You saved " ${data.discountedAmount} " On this order`,
                    showConfirmButton: true,
                    confirmButtonText: 'Ok'
                }).then(() => {
                    const alertCngrtsElement = document.getElementById('alertCngrts');
                    if (alertCngrtsElement) {
                        alertCngrtsElement.style.display = 'block';
                        alertCngrtsElement.innerHTML = `Congratulations! You saved ${data.discountedAmount} on this Order`;
                    } else {
                        console.error('Element with id "alertCngrts" not found.');
                    }
                    window.location.reload();
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: data.message,
                });
            }
        } catch (error) {
            console.error('Error:', error.message);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: error.message || 'An error occurred while applying the coupon. Please try again later.',
            });
        }
    }


</script>


