    async function submitForm(event) {
        if (event) {
            event.preventDefault();
        }

        if (!validateAddressFields()) {
            return;
        }

        const formData = new FormData(document.getElementById('checkout-form'));

        const selectedAddressType = document.querySelector('input[name="addressType"]:checked').value;
        if (selectedAddressType === 'different') {
            formData.append('shipping_fullname', document.getElementById('shipping_fullname').value);
            formData.append('shipping_phone', document.getElementById('shipping_phone').value);
            formData.append('shipping_addressLine', document.getElementById('shipping_address').value);
            formData.append('shipping_City', document.getElementById('shipping_locality').value);
            formData.append('shipping_state', document.getElementById('shipping_state').value);
            formData.append('shipping_country', document.getElementById('shipping_country').value);
            formData.append('shipping_pincode', document.getElementById('shipping_pincode').value);
        } else {
            formData.append('addressId', selectedAddressType);
        }

        formData.append('payment_option', payment);

        const productQuantities = document.querySelectorAll('input[name="productQuantities[]"]');
        const productIds = document.querySelectorAll('input[name="productIds[]"]');

        for (let i = 0; i < productQuantities.length; i++) {
            formData.append('productQuantities[]', productQuantities[i].value);
        }

        for (let i = 0; i < productIds.length; i++) {
            formData.append('productIds[]', productIds[i].value);
        }

        try {
            const response = await fetch('/placeorder', {
                method: 'POST',
                body: formData
            });

            if (response.ok) {
                const responseData = await response.json();

                if (selectedPaymentMethod === 'Cash on delivery') {
                    Swal.fire({
                        icon: 'success',
                        title: 'Order Placed',
                        text: 'Your order has been placed successfully!',
                    }).then(() => {
                        window.location.href = `/successOrder/${responseData.order._id}`;
                    });

                } else if (selectedPaymentMethod === 'razorpay') {
                    razorpayFunction(responseData);
                } else if (selectedPaymentMethod === 'wallet') {
                    Swal.fire({
                        icon: 'success',
                        title: 'Order Placed',
                        text: 'Your order has been placed successfully!',
                    }).then(() => {
                        window.location.href = `/successOrder/${responseData.walletOrder._id}`;
                    });
                } else {
                    const errorResult = await response.json();
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: errorResult.message || 'Total Error',
                    });
                }
            } else {
                const errorResult = await response.json();
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: errorResult.message || 'Error on Else',
                });
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: error.message || 'Catch Error',
            });
        }
    }


async function razorpayFunction(res) {
    console.log(res);

    if (!res || !res.orderId || !res.key_id) {
        console.error('Invalid response format');
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Invalid response format. Please try again later.',
        });
        return;
    }

    const options = {
        key: res.key_id,
        amount: res.razorpayOrder.amount,
        currency: res.razorpayOrder.currency,
        name: "Ezpano Whiff",
        description: "Perfumes",
        image: 'LOGO',
        order_id: res.orderId,
        handler: async function (response) {
            console.log(response);

            const data = {
                orderCreationId: res.orderId,
                razorpayPaymentId: response.razorpay_payment_id,
                razorpayOrderId: response.razorpay_order_id,
                razorpaySignature: response.razorpay_signature,
            };

            try {
                const verifyResponse = await fetch(`/rzrpay-verify,${data.orderCreationId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data),
                });

                const result = await verifyResponse.json();
                console.log("result", result);

                if (result.msgSuccess === 'success') {
                    Swal.fire({
                        title: "Order placed!",
                        text: "Your Order has been confirmed.",
                        icon: "success",
                    }).then(() => {
                        window.location.href = `/successOrder/${result.obj_id}`;
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Verification Error',
                        text: 'Some verification issue occurred. Please try again after some time.',
                    });
                }
            } catch (error) {
                console.error("Error during verification:", error);
                Swal.fire({
                    icon: 'error',
                    title: 'Verification Error',
                    text: `An error occurred during verification: ${error.message}`,
                });
            }
        },
        prefill: {
            name: "Soumya Dey",
            email: "SoumyaDey@example.com",
            contact: "9999999999",
        },
        notes: {
            address: "Soumya Dey Corporate Office",
        },
        theme: {
            color: "#000",
        },
    };

    const rzp = await new Razorpay(options);
    rzp.open();
}

