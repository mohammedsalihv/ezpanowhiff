        selectedPaymentMethod = payment;

        if (!selectedPaymentMethod) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Please select a payment method',
            });
            return;
        }

        const confirmResult = await Swal.fire({
