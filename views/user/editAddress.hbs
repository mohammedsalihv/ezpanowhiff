<body class="container pt-60">
  <h1 class="mb-4">Add Address </h1>
  <div class="row">
    <form action="/userAccount/addressEditing?addressId={{this.addressId}}" method="post" class="col s12"required>
      <div class="row">
      </div>
      <div class="row">
        <div class="input-field col s12 m12 l6">
          <input name="fullname" id="address" type="text" value="{{address.fullname}}" required  title="Please enter a valid address">
          <label for="address">Full name</label>
        </div>
        <div class="input-field col s12 m12 l6">
          <input name="phone" id="town" type="text" required  value="{{address.phone}}" title="Please enter a valid City/Town">
          <label for="town">Phone</label>
        </div>
        <div class="input-field col s12 m12 l6">
          <input name="email" id="town" type="text" required value="{{address.email}}" title="Please enter a valid City/Town">
          <label for="town">email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m12 l6">
          <input name="addressLine" id="address" type="text" required value="{{address.addressLine}}"  title="Please enter a valid address">
          <label for="address">Address</label>
        </div>
        <div class="input-field col s12 m12 l6">
          <input name="street" id="town" type="text" required value="{{address.street}}" title="Please enter a valid City/Town">
          <label for="town">Street</label>
        </div>
        <div class="input-field col s12 m12 l6">
          <input name="City" id="town" type="text" value="{{address.City}}" required title="Please enter a valid City/Town">
          <label for="town">City/Town</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m12 l6">
          <input name="state" id="address" type="text" value="{{address.state}}"  title="Please enter a valid address" required>
          <label for="state">state</label>
        </div>
        <div class="input-field col s12 m12 l6">
          <input value="{{address.country}}" name="country" id="town" type="text">
          <label for="town">Country</label>
        </div>
        <div class="input-field col s12 m12 l6">
          <input value="{{address.pincode}}" name="pincode" id="town" type="number" required >
          <label for="town">Zip code</label>
        </div>
      </div>

      <button id="btn-address" class="waves-effect waves-light btn right " type="submit">Submit</button>
    </form>
  </div>