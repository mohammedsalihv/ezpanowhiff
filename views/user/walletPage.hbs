                text: "You will be logged out!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, log out!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Logged out!',
                        'You have been logged out.',
                        'success'
                    ).then(() => {
                        window.location.href = "/userLogout";
                    });
                }
            });
        }
