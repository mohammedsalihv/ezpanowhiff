async function continuePayment(orderObjId) {
    try {
        const response = await fetch(`/failedPayment/${orderObjId}`);
        const body = await response.json();
        const { orderId, totalAmount } = body.order;
        console.log(orderId)
        await razorpay(orderId, totalAmount, body.order.userId , body.rzrpayKey);
    } catch (error) {
        failureMessage('Error processing payment. Please try again.');
        console.error('Error:', error);
    }
}

function razorpay(rzrpy_id, totalAmount, userId , rzrpayKey) {
    $(document).ready(function () {
        var options = {
            "key": rzrpayKey,
            "amount": totalAmount * 100,
            "currency": "INR",
            "name": "Ezpano Whiff",
            "description": "Perfumes",
            "image": "https://example.com/your_logo",
            "order_id": rzrpy_id,
            "handler": async function (response) {
                const result = await rzrPaymentAgain(userId, rzrpy_id);
                if (result) {
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    return false;
                }
            },
            "prefill": {
                "name": "Salih",
                "email": "infosalihv@gmail.com",
                "contact": "0000000000"
            },
            "notes": {
                "address": "Razorpay Corporate Office"
            },
            "theme": {
                "color": "#000"
            }
        };

        var rzp1 = new Razorpay(options);

        rzp1.on('payment.failed', function (response) {
            failureMessage('Payment failed, try again');
            console.error('Payment failed:', response);
        });

        rzp1.on('payment.error', function (response) {
            console.error('Payment error:', response.error);
        });

        rzp1.open();
    });
}

async function rzrPaymentAgain(userId, rzr_orderId) {
    try {
        const response = await fetch('/payment-pending', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ userId, rzr_orderId })
        });
        const body = await response.json();
        if (body.error) {
            failureMessage(body.error);
            return false;
        } else {
            successMessage(body.message);
            return true;
        }
    } catch (error) {
        failureMessage('Error completing payment. Please try again.');
        console.error('Error:', error);
        return false;
    }
}

function failureMessage(message) {
    Swal.fire({
        text: message,
        position: 'top',
        timer: 2000,
        background: 'red',
        color: 'white',
        showConfirmButton: false
    });
}

function successMessage(message) {
    Swal.fire({
        text: message,
        position: 'top',
        timer: 2000,
        background: 'green',
        color: 'black',
        showConfirmButton: false
    });
}
</script>
