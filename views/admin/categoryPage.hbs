<script>
    function editCategory(categoryId) {
        window.location.href = `/admin/editCategory/${categoryId}`
    }

    function DeleteCategory(categoryId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "it will not be able to revert!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete!'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire(
                    'Deleted!',
                    'You have been Deleted .',
                    'success'
                ).then(() => {
                    window.location.href = `/admin/deleteCategory/${categoryId}`
                    window.location.reload()
                });
            }
        });

    }
</script>

<script>
    const addCategory = async (event) => {
        event.preventDefault();

        const categoryName = document.getElementById('categoryname').value.trim();
        const categoryDescription = document.getElementById('categoryDescription').value.trim();

        if (!categoryName || !isNaN(categoryName) || !categoryDescription) {
            Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'Category name and description must be provided, not be blank, a number, or whitespace'
            });
            return;
        }

        const response = await fetch('/admin/addingNewCategory', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ categoryName, categoryDescription })
        });

        if (!response.ok) {
            const errorData = await response.json();
            Swal.fire({
                icon: 'error',
                title: 'Failed to add category',
                text: errorData.message || 'An error occurred'
            });
            return;
        }

        const data = await response.json();
        if (data.success) {
            await Swal.fire({
                icon: 'success',
                title: 'Category Added',
                text: 'Category added successfully',
                showConfirmButton: true,
                confirmButtonText: 'Ok'
            }).then(() => {
                window.location.reload();
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: data.message
            });
        }
    }

    document.getElementById('new-category-form').addEventListener('submit', addCategory);
</script>

