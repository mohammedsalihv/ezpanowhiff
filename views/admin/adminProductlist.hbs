  <!-- End custom js for this page -->
</head>

<body>

  <div class="container-scroller">


    <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
      <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-start">
        <a class="navbar-brand brand-logo" href="/home">
          <h4 style="color: black; font-size: 30px; margin-right: 45px;">EzpanoWhiff</h4>
        </a>
        <a class="navbar-brand brand-logo-mini" href="/home"><img src="/asset/images/logo-mini.svg" alt="logo" /></a>
      </div>
      <div class="navbar-menu-wrapper d-flex align-items-stretch justify-content-end">
        <ul class="navbar-nav navbar-nav-right">
          <li class="nav-item">
            <a class="nav-link" onclick="adminLogout()">
              <i class="mdi mdi-logout"></i> Logout
            </a>
          </li>
        </ul>
        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button"
          data-toggle="offcanvas">
          <span class="mdi mdi-menu"></span>
        </button>
      </div>
    </nav>


    <div class="container-fluid page-body-wrapper">
      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <ul class="nav">
          <li class="nav-item nav-profile">
            <a href="#" class="nav-link">
              <div class="nav-profile-image">

                <span class="login-status online"></span>
                <!--change to offline or busy as needed-->
              </div>
              <div class="nav-profile-text d-flex flex-column">
                <span class="font-weight-bold mb-2">ADMIN</span>

              </div>
              <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/adminDashboard">
              <span class="menu-title">Dashboard</span>
              <i class="mdi mdi-home menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/sales-report/">
              <span class="menu-title">Sales Report</span>

              <i class="mdi mdi-chart-bar menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/listUsers">
              <span class="menu-title">User Management</span>
              <i class="mdi mdi-format-list-bulleted menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/categoryManagement">
              <span class="menu-title">Category Management</span>
              <i class="mdi mdi-crosshairs-gps menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/productManagement">
              <span class="menu-title">Product Management</span>
              <i class="mdi mdi-format-list-bulleted menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/orderManagement">
              <span class="menu-title">Order Management</span>
              <i class="mdi mdi-chart-bar menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/couponManagement">
              <span class="menu-title">Coupon Management</span>
              <i class="mdi mdi-table-large menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/offerManagement">
              <span class="menu-title">Offer Management</span>
              <i class="mdi mdi-table-large menu-icon"></i>
            </a>
          </li>
        </ul>
      </nav>

      <div style="margin-top: -5%;" class="main-panel">
        <div class="content-wrapper">
          <div class="page-header">
            <h3 class="page-title">
              <span style="font-size: small;" class="page-title-icon bg-gradient-primary text-white me-2">
                <i class="mdi mdi-cart"></i>
              </span><span style="font-size: large;">Product List</span>
            </h3>

          </div>
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                  <div class="d-flex justify-content-between align-items-center mt-2 ml-2">
                                       
                                        <a onclick="addProduct()" class="btn btn-gradient-primary btn-sm">Add Product</a>
                                    </div>
                <div class="card-body">

                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Image</th>
                          <th>Product name</th>
                          <th>Quantity</th>
                          <th>Price</th>
                          <th>status</th>
                          <th>Edit</th>
                          <th>Delete</th>
                          <th>more</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each products}}
                        <tr>
                          <td>
                            <div class="circular-product-image-container">
                              <img class="mx-auto d-block img-fluid img-thumbnail rounded-circle"
                                style="width: 90px; height: 90px;" src="/images/cropped_{{this.img1}}" alt="Image">
                            </div>
                          </td>
                          <td>{{this.productName}}</td>
                          <td>{{this.Qty}}</td>
                          <td>{{this.price}}</td>
                           {{#if (eq this.status 'In stock')}}
                          <td style="color:forestgreen;">
                            {{this.status}}
                          </td>
                          {{else}}
                          <td style="color: red;">
                             {{this.status}}
                          </td>
                          {{/if}}
                          <td><button onclick="editProduct('{{this._id}}')"
                              class="btn bg-gradient-warning btn-sm btn-edit" data-product-id="prod-edit">Edit</button>
                          </td>
                          <td> <button onclick="deleteProduct('{{this._id}}')"
                              class="btn bg-gradient-danger btn-sm btn-unlist" data-product-id="">Delete</button>
                          </td>
                          <td>
                            <button onclick="viewMore()" class="btn bg-gradient-primary btn-sm btn-list"
                              data-product-id="">view more</button>
                          </td>
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>

                </div>
                <div class="pagination-wrap">
                  <ul class="pagination">
                    <li class="page-item {{#if (eq page 1)}}disabled{{/if}}">
                      <a class="page-link" href="/admin/productManagement?page={{add page - 1}}&limit={{limit}}">&laquo;</a>
                    </li>
                    {{#each pages}}
                    <li class="page-item {{#if (eq page this)}}active{{/if}}">
                      <a class="page-link" href="/admin/productManagement?page={{this}}&limit={{limit}}">{{this}}</a>
                    </li>
                    {{/each}}
                    <li class="page-item {{#if (eq page totalPages)}}disabled{{/if}}">
                      <a class="page-link" href="/admin/productManagement?page={{add page 1}}&limit={{limit}}">&raquo;</a>
                    </li>
                  </ul>
                </div>
              </div>

            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/asset/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/asset/vendors/chart.js/chart.umd.js"></script>
    <script src="/asset/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/asset/js/off-canvas.js"></script>
    <script src="/asset/js/misc.js"></script>
    <script src="/asset/js/settings.js"></script>
    <script src="/asset/js/todolist.js"></script>
    <script src="/asset/js/jquery.cookie.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/asset/js/dashboard.js"></script>
    <!-- End custom js for this page -->
    
</body>
</html>
<script>
  function editProduct(productId){
    window.location.href = `/admin/productEdit/${productId}`
  }

  function deleteProduct(productId){
     Swal.fire({
        title: 'Are you sure?',
        text: "it will not be able to revert!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete!'
    }).then((result) => {
        if (result.isConfirmed) {
            Swal.fire(
                'Deleted!',
                'You have been Deleted .',
                'success'
            ).then(() => {
                 window.location.href = `/admin/deleteProduct/${productId}`
                 window.location.reload()
            });
        }
    });
    
  }

  function viewMore(){
    window.location.href = `/admin/productManagementDetail`
  }
</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<script>
function adminLogout() {
    Swal.fire({
        title: 'Are you sure?',
        text: "You will be logged out!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, log out!'
    }).then((result) => {
        if (result.isConfirmed) {
            Swal.fire(
                'Logged out!',
                'You have been logged out.',
                'success'
            ).then(() => {
                window.location.href = "/admin/adminLogout";
            });
        }
    });
}
</script>
<script>
  function addProduct(){
    window.location.href="/admin/productManagement/addProduct";
  }
</script>