            <div style="margin-top: -5%;" class="main-panel">
                <div class="content-wrapper">
                    <div class="page-header">
                        <h3 class="page-title">
                            <span style="font-size: small;" class="page-title-icon bg-gradient-primary text-white me-2">
                                <i class="mdi mdi-receipt"></i>
                            </span><span style="font-size: large;">Orders List</span>
                        </h3>
                     
                    </div>

                    <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                   
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead style="text-align: center; font-weight:900; font-size:larger;">
                                                <tr>
                                                    <th>Order ID</th>
                                                    <th>Total</th>
                                                    <th>Payment Method</th>
                                                    <th>Order Status</th>
                                                    <th>More</th>
                                                </tr>
                                            </thead>
                                            <tbody class="text-center">
                                                <!-- Orders printed as a loop -->
                                              {{#each orders}}
                                                <tr>
                                                    <td class="td-admin-order">{{this.nameRandom}}</td>
                                                   <td  class="td-admin-order">{{this.totalAmount}}</td>
                                                  <td  class="td-admin-order">{{this.paymentMethod}}</td>
                                                   <td  class="td-admin-order">{{this.orderStatus}}</td>
                                                  <td  class="td-admin-order"><button class="btn btn-edit bg-gradient-primary btn-sm "
                                                            onclick="More('{{this._id}}')"
                                                            data-category-id="">More</button></td>
                                                </tr>
                                                {{/each}}
                                                <!-- Orders loop ends -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                 <div class="pagination-wrap">
                                    <ul  class="pagination">
                                        <li class="page-item {{#if (eq page 1)}}disabled{{/if}}">
                                            <a class="page-link"
                                                href="/admin/orderManagement?page={{add page - 1}}&limit={{limit}}">&laquo;</a>
                                        </li>
                                        {{#each pages}}
                                        <li class="page-item {{#if (eq page this)}}active{{/if}}">
                                            <a class="page-link"
                                                href="/admin/orderManagement?page={{this}}&limit={{limit}}">{{this}}</a>
                                        </li>
                                        {{/each}}
                                        <li class="page-item {{#if (eq page totalPages)}}disabled{{/if}}">
                                            <a class="page-link"
                                                href="/admin/orderManagement?page={{add page 1}}&limit={{limit}}">&raquo;</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
