<script>
  async function block(Id) {
    try {
      const confirmation = await Swal.fire({
        title: 'Are you sure?',
        text: "This user will be blocked!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, block!'
      });

      if (confirmation.isConfirmed) {
        const response = await fetch(`/admin/blockUser/${Id}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        if (!response.ok) {
          console.error('Fetch error:', response.statusText);
          await Swal.fire({
            title: 'Error',
            text: `Error: ${response.statusText}`,
            icon: 'error',
            confirmButtonText: 'OK',
          });
          return; // Exit the function if there's an error
        }

        const result = await response.json();
        await Swal.fire({
          icon: 'success',
          title: 'Blocked',
          text: 'User account has been blocked',
          confirmButtonText: 'OK',
        });

        window.location.reload();
      }
    } catch (error) {
      console.error('An unexpected error occurred:', error);
      await Swal.fire({
        title: 'Error',
        text: 'An unexpected error occurred. Please try again later.',
        icon: 'error',
        confirmButtonText: 'OK',
      });
    }
  }

  async function unblock(Id) {
    try {
      const confirmation = await Swal.fire({
        title: 'Are you sure?',
        text: "This user will be unblocked!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, unblock!'
      });

      if (confirmation.isConfirmed) {
        const response = await fetch(`/admin/unBlockUser/${Id}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        if (!response.ok) {
          await Swal.fire({
            title: 'Error',
            text: `Error: ${response.statusText}`,
            icon: 'error',
            confirmButtonText: 'OK',
          });
          return;
        }

        const result = await response.json();
        await Swal.fire({
          icon: 'success',
          title: 'Unblocked',
          text: 'User account has been unblocked',
          confirmButtonText: 'OK',
        });

        window.location.reload();
      }
    } catch (error) {
      console.error('An unexpected error occurred:', error);
      await Swal.fire({
        title: 'Error',
        text: 'An unexpected error occurred. Please try again later.',
        icon: 'error',
        confirmButtonText: 'OK',
      });
    }
  }
</script>



